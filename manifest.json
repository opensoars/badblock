{
	"manifest_version": 2,

	"name": "badblock",
	"description": "Block the bad web stuff!",
	"version": "1.0",

	"background": {
		"scripts": ["/js/background.js"]
	},

	"browser_action": {
		"default_icon": "style/img/extensionIcon.png",
		"default_popup": "popup.html"
	},
	
	"permissions": [
		"storage",
		"webRequest",
		"webRequestBlocking",
		"*://*/"
	]
}
